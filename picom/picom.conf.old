backend = "glx";
vsync = true;
dbus = false;
mark-wmwin-focused = true;
mark-ovredir-focused = false;
detect-rounded-corners = true; # testing
detect-client-opacity = true; # testing
refresh-rate = 0;
unredir-if-possible = true;
detect-transient = true;
detect-client-leader = true;

shadow = true;
shadow-radius = 30;
shadow-opacity = 70;
#shadow-offset-x = -7;
#shadow-offset-y = -7;

corner-radius = 5;
rounded-corners-exclude = [
    "name = 'Notification'",
    "class_g = 'dmenu'",
    "class_g = 'Polybar'",
];

shadow-exclude= [
    "class_g = 'Polybar'",
]

inactive-opacity = 0.90;
active-opacity = 1;
frame-opacity = 0.95;
inactive-opacity-override = false;

opacity-rule = [
  "100:class_g = 'mpv' && focused",
  "100:class_g = 'mpv' && focused",
  "100:class_g = 'feh' && focused",
  "100:class_g = 'sxiv' && focused",
  "100:name  = 'sxiv' && focused",
  "100:name *= 'mp4' && focused",
  "100:name *= 'YouTube' && focused",
  "100:name *= 'Twitch' && focused",
  "100:name *= 'Netflix' && focused",
  "100:name *= 'youtube' && focused",
  "100:name *= 'netflix' && focused",
  "100:name *= 'Disney+' && focused",
  "100:name *= 'Meet' && focused",
];

inactive-dim = 0.4;
inactive-dim-fixed = true;

focus-exclude = [
    "class_g = 'dwm'",
    "class_g = 'dmenu'",
];

override_redirect = true;

